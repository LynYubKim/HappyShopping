<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mnb.happyshopping.SearchActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:gravity="center"
        android:text="상품을 고르세요."
        android:textSize="40dp"
        android:textColor="#000000"
        android:layout_marginTop="30dp"
        />

    <CheckBox
        android:id="@+id/SA_CheckBox1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Goods A"
        android:textSize="30dp"
        android:layout_marginTop="100dp"
        />

    <CheckBox
        android:id="@+id/SA_CheckBox2"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Goods B"
        android:textSize="30dp"
        android:layout_marginTop="150dp"
        />

    <CheckBox
        android:id="@+id/SA_CheckBox3"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Goods C"
        android:textSize="30dp"
        android:layout_marginTop="200dp"
        />

    <Button
        android:id="@+id/SA_Button1"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="350dp"
        android:text="Route Guide"
        android:textSize="40dp"
        android:textColor="#000000"
        />

</RelativeLayout>
